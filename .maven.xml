<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                            http://maven.apache.org/xsd/settings-1.0.0.xsd">

	<interactiveMode>false</interactiveMode>

	<servers>
	
    	<server>
    		<id>ossrh</id>
    		<username>${env.SONATYPE_USERNAME}</username>
    		<password>${env.SONATYPE_PASSWORD}</password>
    	</server>
    	
	</servers>
	
	<profiles>
	
		<profile>
			<id>with-google-repo</id>
			<repositories>
				<repository>
					<id>01-google-repo</id>
					<url>https://maven-central-eu.storage-download.googleapis.com/maven2/</url>
				</repository>
			</repositories>
		</profile>
		
		<profile>
			<id>with-central-repo</id>
			<repositories>
				<repository>
					<id>02-central-repo</id>
					<url>https://repo.maven.apache.org/maven2/</url>
				</repository>
			</repositories>
		</profile>
	
		<profile>
			<id>gpg</id>
             <properties>
            	<gpg.executable>${env.GPG_EXECUTABLE}</gpg.executable>
                <gpg.passphrase>${env.GPG_PASSPHRASE}</gpg.passphrase>
            </properties>
		</profile>
	
	</profiles>
	
	<activeProfiles>
		<activeProfile>with-google-repo</activeProfile>
		<activeProfile>with-central-repo</activeProfile>
		<activeProfile>gpg</activeProfile>
	</activeProfiles>

</settings>